{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper h-100">
    {% if (app.user) %}
        <a class="btn btn-outline-success" href="/programme/new">Ajouter un programme</a>
        <div style="padding-top: 50px;">
            {% for prog in programmes %}
                <div class="alert alert-secondary d-flex justify-content-between">
                    <h2><a class="text-dark" href="/dashboard/{{prog.id}}/bien">{{prog.title}}</a></h2>
                    <div>
                        <a href="/programme/{{prog.id}}/delete" class="btn btn-outline-danger">Supprimer</a>
                        <a href="/programme/{{prog.id}}/edit" class="btn btn-outline-primary">Modifier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif  %}
</div>
{% endblock %}
